<%= form_for(@tourist_destination) do |f| %>
  <% if @tourist_destination.errors.any? %>
    <div id="error_explanation">
      <ul>
      <% @tourist_destination.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.collection_select(:country_id, Country.all, :id, :display_name,
                            prompt: true) %>
  </div>
  <div class="actions">
    <%= f.submit t('.submit') %>
  </div>
<% end %>
